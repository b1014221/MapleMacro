A = 5

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

WHILE TRUE

KBD(VK_G,0,1000)
SLEEP(1)

FOR G = 1 TO 14

IFB A < 5
KBD(VK_RIGHT,1,1000)
KBD(VK_RIGHT,2,500)
ELSEIF A > 4
KBD(VK_RIGHT,1,1000)
KBD(VK_UP,1)
KBD(VK_RIGHT,2,700)
KBD(VK_UP,2)
KBD(VK_DOWN,1,100)
KBD(VK_DOWN,2,700)
SLEEP(0.1)
A = 0
ENDIF

FOR X = 1 TO 50
KBD(VK_CTRL,0,100)
NEXT

KBD(VK_LEFT,1,1000)
KBD(VK_LEFT,2,500)

FOR X = 1 TO 50
KBD(VK_CTRL,0,100)
NEXT

A = A + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

NEXT

WEND