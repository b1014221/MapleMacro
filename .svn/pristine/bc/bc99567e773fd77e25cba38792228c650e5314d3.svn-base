//=========================================
//  Main Script Start
//=========================================
while TRUE

    //時刻の取得     : 3分経過していたらスキルをかかけなおす
    reUseSkillTime = GETTIME( 180 / 86400 )
    useSkill()

    KBD(VK_R,0,500)
    BTN(LEFT,CLICK,731,470,1000)

    SLEEP(0.5)
    checkFamiliarPower()
    
    while TRUE
        goLeftAttack()
        goRightAttack()
        //3分経過していたらループを抜け出す
        if GETTIME() > reUseSkillTime then break
    wend
wend

