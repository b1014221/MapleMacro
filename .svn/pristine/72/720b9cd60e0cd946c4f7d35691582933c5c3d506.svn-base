ACW(GETID("MapleStory","MapleStoryClass"),1,1)

SKILL = 0

KBD(VK_G,0,1000)
KBD(VK_H,0,3300)

WHILE TRUE

for x = 1 to 20
	KBD(VK_X,0,500)
next

SKILL = SKILL + 1

IFB SKILL > 5
	KBD(VK_G,0,1000)
	KBD(VK_H,0,3300)
	SKILL = 0
ENDIF


init()
sleep(1)
check()



WEND

PROCEDURE init() 

	KBD(VK_RIGHT,1,500)
	for i = 1 to 3
		KBD(VK_SPACE,0,500)
	next
	KBD(VK_RIGHT,2,300)
	
	KBD(VK_LEFT,1,1000)
	KBD(VK_SPACE,0,500)
	KBD(VK_SPACE,0,500)
	KBD(VK_LEFT,2,500)
	
FEND

PROCEDURE check()

	modeFlag = 0

	IFB CHKIMG("モード.bmp",0,0,0,800,600)
		KBD(VK_O,0,500)
		KBD(VK_T,0,1000)
		modeFlag = 1
	ENDIF
	
	IFB modeFlag = 1
		FOR J = 1 TO 200
			KBD(VK_J,0,100)
		NEXT
	modeFlag = 0
	ENDIF
	
	
	sleep(1)
	
	IF CHKIMG("パニシング.BMP",0,0,0,800,600) THEN KBD(VK_Q,0,500)

FEND