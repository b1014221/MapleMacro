THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

G = 10 
MH = 10

WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/十字旅団最上級体力水薬9.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/十字旅団最上級魔力水薬0.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//滞在マップ確認・この画像を発見したら異常が起きたと判断してログアウト
IF CHKIMG("../画像/エルナス.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS

KBD(VK_RIGHT,1,1000)
KBD(VK_HOME,0,100)
KBD(VK_RIGHT,2,100)

//▼▼補助スキル▼▼
IFB G > 7
KBD(VK_G,0,100)
SLEEP(2.5)
G = 0
ENDIF

IFB MH > 7
KBD(VK_NEXT,0,100)
SLEEP(1.5)
MH = 0
ENDIF

//▼▼上段へ移動▼▼
KBD(VK_RIGHT,1)
FOR X = 1 TO 15
KBD(VK_HOME,0,100)
NEXT
KBD(VK_RIGHT,2)

KBD(VK_DOWN,1)
FOR X = 1 TO 3
KBD(VK_C,0,100)
NEXT
KBD(VK_DOWN,2)
KBD(VK_LEFT,1)
KBD(VK_LEFT,2,200)
SLEEP(0.6)

IF CHKIMG("../画像/エルナス.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS

//▼▼殲滅▼▼
FOR X = 1 TO 15
KBD(VK_CTRL,0,100)
NEXT

//▼▼下から3段目へ移動▼▼
KBD(VK_RIGHT,1)
FOR X = 1 TO 10
KBD(VK_HOME,0,100)
NEXT
KBD(VK_RIGHT,2,200)

KBD(VK_DOWN,1)
FOR X = 1 TO 3
KBD(VK_C,0,200)
NEXT
SLEEP(0.5)
FOR X = 1 TO 3
KBD(VK_C,0,100)
NEXT
KBD(VK_DOWN,2)
KBD(VK_LEFT,1)
KBD(VK_LEFT,2,200)
SLEEP(0.8)

IF CHKIMG("../画像/エルナス.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS

//▼▼殲滅▼▼
FOR X = 1 TO 15
KBD(VK_CTRL,0,100)
NEXT

//▼▼下から2段目へ移動▼▼
KBD(VK_RIGHT,1)
FOR X = 1 TO 10
KBD(VK_HOME,0,100)
NEXT
KBD(VK_RIGHT,2,200)

KBD(VK_DOWN,1)
FOR X = 1 TO 3
KBD(VK_C,0,100)
NEXT
KBD(VK_DOWN,2)
KBD(VK_LEFT,1)
KBD(VK_LEFT,2,200)
SLEEP(0.6)

IF CHKIMG("../画像/エルナス.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS

//▼▼殲滅▼▼
FOR X = 1 TO 15
KBD(VK_CTRL,0,100)
NEXT

//▼▼最下段へ移動▼▼
KBD(VK_RIGHT,1)
FOR X = 1 TO 10
KBD(VK_HOME,0,100)
NEXT
KBD(VK_RIGHT,2,200)

KBD(VK_DOWN,1)
FOR X = 1 TO 3
KBD(VK_C,0,100)
NEXT
KBD(VK_DOWN,2)
KBD(VK_LEFT,1)
KBD(VK_LEFT,2,200)
SLEEP(0.8)

IF CHKIMG("../画像/エルナス.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS

WHILE CHKIMG("../画像/黄点.BMP",0,0,0,100,150)
KBD(VK_RIGHT,1)
KBD(VK_C,0,200)
KBD(VK_RIGHT,2,500)
KBD(VK_DOWN,1,500)
KBD(VK_C,0,200)
KBD(VK_DOWN,2,500)
KBD(VK_LEFT,1,500)
KBD(VK_LEFT,2,200)
IF CHKIMG("../画像/エルナス.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
WEND

//▼▼殲滅▼▼
FOR X = 1 TO 30
KBD(VK_CTRL,0,100)
NEXT

//▼▼最上段へワープ▼▼
KBD(VK_LEFT,1,500)
IFB !CHKIMG("../画像/黄点.BMP",0,0,0,85,250)
FOR X = 1 TO 3
KBD(VK_HOME,0,100)
NEXT
ENDIF
WHILE TRUE
	KBD(VK_LEFT,1)
	WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,76,250) // 止まる場所がズレる場合は、76を70〜80程度で調整してください
	IF CHKIMG("../画像/エルナス.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
	WEND
	KBD(VK_LEFT,2)

	FOR X = 1 TO 3
		KBD(VK_UP,1)
		KBD(VK_UP,2,50)
		SLEEP(0.5)
		IF CHKIMG("../画像/黄点.BMP",0,0,0,150,150) THEN BREAK 2
		KBD(VK_LEFT,1,100)
		KBD(VK_LEFT,2,100)
	NEXT

	KBD(VK_RIGHT,1)
	WHILE CHKIMG("../画像/黄点.BMP",0,0,0,80,250)
	KBD(VK_HOME,0,100)
	IF CHKIMG("../画像/エルナス.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
	WEND
	KBD(VK_RIGHT,2)
	
	KBD(VK_LEFT,1,500)
	KBD(VK_LEFT,2,100)
	FOR X = 1 TO 15
	KBD(VK_CTRL,0,100)
	NEXT
	SLEEP(1)
WEND

G = G + 1
MH = MH + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND
//▲▲自動狩りメイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼自動狩りメイン部分と並列して繰り返し行う処理ココから▼▼



//▲▲ココまで▲▲
WEND
FEND