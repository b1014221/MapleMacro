THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼ゴミ捨て時にクリックする位置の指定▼▼
ゴミ捨てX = 550 // 左から550
ゴミ捨てY = 100  // 上から100の位置をクリック

//▼▼メイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

//▼▼サヘル地帯1にいない場合（画像認識に失敗した場合）はスタートしません▼▼
WHILE !CHKIMG("../画像/サヘル地帯1.BMP",0,0,0,200,200)
WEND

WHILE TRUE

//▼▼狩り部分ココから▼▼
WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/十字旅団最上級体力水薬9.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/十字旅団最上級魔力水薬0.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//滞在マップ確認・この画像を発見したら異常が起きたと判断してログアウト
IF CHKIMG("../画像/マガティア左.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/マガティア右.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS

//▼▼他のプレイヤーがいた場合・ココから▼▼
WHILE CHKIMG("../画像/赤点.BMP",0,0,0,200,200)
	SLEEP(15) //とりあえず15秒待機
	IF !CHKIMG("../画像/赤点.BMP",0,0,0,200,200) THEN BREAK// いなくなっていたら狩り再開
	//↑15秒待ってもいなくならない場合は↓へ、いなくなったら狩り再開
	WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,150,120)
		KBD(VK_RIGHT,1)
		WHILE CHKIMG("../画像/黄点.BMP",0,0,0,110,150)
		WEND
		KBD(VK_RIGHT,2)
		KBD(VK_LEFT,1)
		WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,110,150)
		WEND		
		KBD(VK_LEFT,2)
		FOR X = 1 TO 10
		KBD(VK_SHIFT,0,100) // ロケットブースター
		NEXT
	WEND
	//チャンネル変更
	SLEEP(5)
	KBD(VK_ESC,0)
	KBD(VK_ENTER,0,500)
	KBD(VK_RIGHT,0,500)
	KBD(VK_ENTER,0,500)
	SLEEP(5)
WEND
//▲▲他のプレイヤーがいた場合・ココまで▲▲

//▼▼マグネチックフィールドを設置しながら左へ移動▼▼
KBD(VK_CTRL,0,500)

KBD(VK_LEFT,1,500)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,100,150)
WEND
KBD(VK_LEFT,2)

KBD(VK_CTRL,0)

IF CHKIMG("../画像/クエスト完了.BMP",1,0,0,800,600) THEN BREAK

KBD(VK_LEFT,1,500)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,65,150)
WEND
KBD(VK_LEFT,2)

KBD(VK_CTRL,0)

IF CHKIMG("../画像/クエスト完了.BMP",1,0,0,800,600) THEN BREAK

//▼▼ロボファクトリーを設置して左へ移動▼▼
KBD(VK_LEFT,1,500)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,50,150)
WEND
KBD(VK_END,0)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,40,150)
WEND
KBD(VK_LEFT,2,1000)

IF CHKIMG("../画像/クエスト完了.BMP",1,0,0,800,600) THEN BREAK

//▼▼右端へ戻る▼▼
KBD(VK_RIGHT,1)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,132,150)
KBD(VK_CTRL,0,100)
WEND
KBD(VK_RIGHT,2)

IF CHKIMG("../画像/クエスト完了.BMP",1,0,0,800,600) THEN BREAK

//▼▼左右に歩いて1往復▼▼
KBD(VK_LEFT,1)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,40,150)
IF CHKIMG("../画像/クエスト完了.BMP",1,0,0,800,600) THEN BREAK 2
WEND
KBD(VK_LEFT,2,1000)
KBD(VK_RIGHT,1)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,130,150)
IF CHKIMG("../画像/クエスト完了.BMP",1,0,0,800,600) THEN BREAK 2
WEND
KBD(VK_RIGHT,2)

//▼▼スキル使用可能になるまで待機▼▼
SLEEP(5) // 5秒を増減させて調整してください

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND
//▲▲狩り部分ココまで▲▲
KBD(VK_RIGHT,2)
KBD(VK_LEFT,2)

//▼▼サヘル地帯1→マガティア▼▼
KBD(VK_RIGHT,1)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,125,200)
WEND

WHILE TRUE
	KBD(VK_RIGHT,1)
	WHILE CHKIMG("../画像/黄点.BMP",0,0,0,132,200)//位置がズレる場合は132を増減
	KBD(VK_UP,0)
	IF !CHKIMG("../画像/サヘル地帯1.BMP",0,0,0,200,200) THEN BREAK 2
	WEND
	KBD(VK_RIGHT,2)
	KBD(VK_LEFT,1)
	WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,132,200)//位置がズレる場合は132を増減
	KBD(VK_UP,0)
	IF !CHKIMG("../画像/サヘル地帯1.BMP",0,0,0,200,200) THEN BREAK 2		
	WEND
	KBD(VK_LEFT,2)
WEND
KBD(VK_RIGHT,2)
KBD(VK_LEFT,2)

WHILE !CHKIMG("../画像/マガティア右.BMP",0,0,0,250,200)
WEND

//▼▼アイテムウィンドウが開いてなかったら開く▼▼
IFB !CHKIMG("../画像/アイテム欄.BMP",0,0,0,800,580)
KBD(VK_I,0,500)
ENDIF

//▼▼消費欄ゴミ捨て▼▼
WHILE TRUE
IF CHKIMG("../画像/アイテム欄.BMP",0,0,0,800,600) THEN BREAK
WEND
BTN(LEFT,CLICK,G_IMG_X+35,G_IMG_Y-240,500)//消費欄クリック
SLEEP(0.5)
//「マナエリ」があったら捨てる
IFB CHKIMG("../画像/マナエリ.BMP",0,0,0,800,300)
BTN(LEFT,0,G_IMG_X,G_IMG_Y,500)//マナエリクリック
BTN(LEFT,0,ゴミ捨てX,ゴミ捨てY,500)//捨てる
KBD(VK_ENTER,0,500)
BTN(LEFT,0,ゴミ捨てX,ゴミ捨てY,500)
ENDIF

//▼▼ETC欄ゴミ捨て▼▼
WHILE TRUE
IF CHKIMG("../画像/アイテム欄.BMP",0,0,0,800,600) THEN BREAK
WEND
BTN(LEFT,CLICK,G_IMG_X+70,G_IMG_Y-240,500)//ETC欄クリック
SLEEP(0.5)
//「ウッドハンマー」があったら捨てる
FOR X = 1 TO 5
	IFB CHKIMG("../画像/ウッドハンマー.BMP",0,0,0,800,300)
	BTN(LEFT,0,G_IMG_X,G_IMG_Y,500)//ウッドハンマークリック
	BTN(LEFT,0,ゴミ捨てX,ゴミ捨てY,500)//捨てる
	KBD(VK_ENTER,0,500)
	BTN(LEFT,0,ゴミ捨てX,ゴミ捨てY,500)
	ENDIF
NEXT
//「モンスターカード」があったら捨てる
IFB CHKIMG("../画像/モンスターカード.BMP",0,0,0,800,300)
BTN(LEFT,0,G_IMG_X,G_IMG_Y,500)//モンスターカードクリック
BTN(LEFT,0,ゴミ捨てX,ゴミ捨てY,500)//捨てる
KBD(VK_ENTER,0,500)
BTN(LEFT,0,ゴミ捨てX,ゴミ捨てY,500)
ENDIF

//▼▼アイテムウィンドウを閉じる▼▼
KBD(VK_I,0,500)
KBD(VK_ESC,0,500)
BTN(LEFT,0,50,50,500)

//▼▼イベントガイドの所へ移動▼▼
KBD(VK_LEFT,1)
WHILE !CHKIMG("../画像/マガティア左.BMP",0,0,0,250,200)
WEND
KBD(VK_LEFT,2)

//▼▼クエスト完了→再受注▼▼
MMV(50,50,500)//マウスカーソルが邪魔にならないように移動
WHILE !CHKIMG("../画像/シアワセノカケラNPC.BMP",0,0,0,800,620)
KBD(VK_Y,0)
SLEEP(1.5)
WEND
KBD(VK_ESC,0)

//▼▼マガティア→サヘル地帯1▼▼
WHILE TRUE
	KBD(VK_RIGHT,1)
	WHILE !CHKIMG("../画像/マガティア右.BMP",0,0,0,190,200)
	KBD(VK_UP,0)
	IF !CHKIMG("../画像/マガティア右.BMP",0,0,0,250,200) THEN BREAK 2
	WEND
	KBD(VK_RIGHT,2)
	KBD(VK_LEFT,1)
	WHILE !CHKIMG("../画像/マガティア左.BMP",0,0,0,250,200)
	KBD(VK_UP,0)
	IF !CHKIMG("../画像/マガティア右.BMP",0,0,0,250,200) THEN BREAK 2
	WEND
	KBD(VK_LEFT,2)
WEND
KBD(VK_RIGHT,2)
KBD(VK_LEFT,2)

WHILE !CHKIMG("../画像/サヘル地帯1.BMP",0,0,0,200,200)
WEND

WEND
//▲▲メイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼メイン部分と並列して繰り返し行う処理ココから▼▼



//▲▲ココまで▲▲
WEND
FEND