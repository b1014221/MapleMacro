THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/ホンスター9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/マナブル0.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//▼▼中に入る処理▼▼
WHILE !CHKIMG("../画像/永遠の警戒地.BMP",0,0,0,300,550)
WEND
KBD(VK_RIGHT,1,1000)
KBD(VK_RIGHT,2,1000)

WHILE CHKIMG("../画像/永遠の警戒地.BMP",0,0,0,300,550)
KBD(VK_Y,0,500)
KBD(VK_DOWN,0,1000)
KBD(VK_DOWN,0,500)
KBD(VK_Y,0,500)
KBD(VK_Y,0,1000)
SLEEP(3)
WEND

WHILE !CHKIMG("../画像/支配者の秘密の間.BMP",0,0,0,310,90)
WEND

//▼▼真ん中へ移動▼▼
KBD(VK_RIGHT,1,1000)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,145,200)
WEND
KBD(VK_RIGHT,2)

//▼▼補助スキル▼▼
KBD(VK_J,0,200)
MH = GETTIME( 290 / 86400 ) // メイプルヒーローのかけ直し時間設定
KBD(VK_HOME,0,2000)

//▼▼ボス召喚▼▼
FOR X = 270 TO 600 STEP 10
BTN(LEFT,0,X,50) // 1024×768で使用する場合は50→240に変更
NEXT
KBD(VK_Y,0,1000)
KBD(VK_Y,0,500)

//▼▼１匹目ココから▼▼
KBD(VK_END,0,200)
FOR X = 1 TO 35
KBD(VK_CTRL,0,100)
NEXT

//とりあえず右端まで押しこみ
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,168,200)
FOR X = 1 TO 20
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_RIGHT,1,500)
KBD(VK_RIGHT,2,500)
WEND
KBD(VK_END,0,200)

//ここから繰り返しスタート
WHILE TRUE

IF CHKIMG("../画像/ホンスター9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

FOR Y = 1 TO 2
	WHILE !CHKIMG("../画像/ヘビーマシーンガン.BMP",0,0,0,800,580)
	FOR X = 1 TO 5
	KBD(VK_CTRL,0,100)
	NEXT
	WEND
	IF !CHKIMG("../画像/クリムゾンボス1.BMP",0,0,0,300,80) THEN BREAK 2
	SLEEP(0.5)
	FOR X = 1 TO 3
	KBD(VK_END,0,100)
	NEXT
	FOR X = 1 TO 60
	KBD(VK_CTRL,0,100)
	NEXT
	//▼▼メイプルヒーロー▼▼
	IFB GETTIME() > MH
	KBD(VK_J,0,500)
	SLEEP(1)
	MH = GETTIME( 290 / 86400 ) // メイプルヒーローのかけ直し時間設定
	ENDIF
	IF !CHKIMG("../画像/クリムゾンボス1.BMP",0,0,0,300,80) THEN BREAK 2
NEXT

KBD(VK_RIGHT,1,800)
KBD(VK_RIGHT,2,200)

//▼▼補助スキル▼▼
KBD(VK_HOME,0,100)
KBD(VK_U,0,100)

FOR Y = 1 TO 2
	WHILE !CHKIMG("../画像/ヘビーマシーンガン.BMP",0,0,0,800,580)
	FOR X = 1 TO 5
	KBD(VK_CTRL,0,100)
	NEXT
	WEND
	IF !CHKIMG("../画像/クリムゾンボス1.BMP",0,0,0,300,80) THEN BREAK 2
	SLEEP(0.5)
	FOR X = 1 TO 3
	KBD(VK_END,0,100)
	NEXT
	FOR X = 1 TO 60
	KBD(VK_CTRL,0,100)
	NEXT
	//▼▼メイプルヒーロー▼▼
	IFB GETTIME() > MH
	KBD(VK_J,0,500)
	SLEEP(1)
	MH = GETTIME( 290 / 86400 ) // メイプルヒーローのかけ直し時間設定
	ENDIF
	IF !CHKIMG("../画像/クリムゾンボス1.BMP",0,0,0,300,80) THEN BREAK 2
NEXT

KBD(VK_LEFT,1,800)
KBD(VK_LEFT,2,400)
KBD(VK_RIGHT,1)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,168,200)
WEND
KBD(VK_RIGHT,2,100)

//▼▼補助スキル▼▼
KBD(VK_HOME,0,100)
KBD(VK_U,0,100)

WEND // ← ボスの画像が消えたら(倒したら)BREAKでココを通過
//▲▲１匹目ココまで▲▲

//▼▼２匹目ココから▼▼
KBD(VK_LEFT,1,200)
KBD(VK_LEFT,2,500)
KBD(VK_RIGHT,1)
KBD(VK_RIGHT,2,200)

WHILE TRUE

IF CHKIMG("../画像/ホンスター9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

FOR Y = 1 TO 2
	WHILE !CHKIMG("../画像/ヘビーマシーンガン.BMP",0,0,0,800,580)
	FOR X = 1 TO 5
	KBD(VK_CTRL,0,100)
	NEXT
	WEND
	IF !CHKIMG("../画像/クリムゾンボス2.BMP",0,0,0,300,80) THEN BREAK 2
	SLEEP(0.5)
	FOR X = 1 TO 3
	KBD(VK_END,0,100)
	NEXT
	FOR X = 1 TO 60
	KBD(VK_CTRL,0,100)
	NEXT
	//▼▼メイプルヒーロー▼▼
	IFB GETTIME() > MH
	KBD(VK_J,0,500)
	SLEEP(1)
	MH = GETTIME( 290 / 86400 ) // メイプルヒーローのかけ直し時間設定
	ENDIF
	IF !CHKIMG("../画像/クリムゾンボス2.BMP",0,0,0,300,80) THEN BREAK 2
NEXT

KBD(VK_RIGHT,1,800)
KBD(VK_RIGHT,2,200)

//▼▼補助スキル▼▼
KBD(VK_HOME,0,100)
KBD(VK_U,0,100)

FOR Y = 1 TO 2
	WHILE !CHKIMG("../画像/ヘビーマシーンガン.BMP",0,0,0,800,580)
	FOR X = 1 TO 5
	KBD(VK_CTRL,0,100)
	NEXT
	WEND
	IF !CHKIMG("../画像/クリムゾンボス2.BMP",0,0,0,300,80) THEN BREAK 2
	SLEEP(0.5)
	FOR X = 1 TO 3
	KBD(VK_END,0,100)
	NEXT
	FOR X = 1 TO 60
	KBD(VK_CTRL,0,100)
	NEXT
	//▼▼メイプルヒーロー▼▼
	IFB GETTIME() > MH
	KBD(VK_J,0,500)
	SLEEP(1)
	MH = GETTIME( 290 / 86400 ) // メイプルヒーローのかけ直し時間設定
	ENDIF
	IF !CHKIMG("../画像/クリムゾンボス2.BMP",0,0,0,300,80) THEN BREAK 2
NEXT

KBD(VK_LEFT,1,800)
KBD(VK_LEFT,2,300)
KBD(VK_RIGHT,1)
FOR X = 1 TO 6
SLEEP(0.1)
IF !CHKIMG("../画像/黄点.BMP",0,0,0,168,200) THEN BREAK
NEXT
KBD(VK_RIGHT,2,100)

//▼▼補助スキル▼▼
KBD(VK_HOME,0,100)
KBD(VK_U,0,100)

WEND // ← ボスの画像が消えたら(倒したら)BREAKでココを通過
//▲▲２匹目ココまで▲▲

//▼▼ペットのエサ▼▼
KBD(VK_T,0,200)
SLEEP(0.2)

//▼▼外に出る処理▼▼
CHKIMG("../画像/黄点.BMP",0,0,0,200,150)
IFB G_IMG_X > 145
KBD(VK_LEFT,1)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,145,150)
WEND
KBD(VK_LEFT,2)
ENDIF
IFB G_IMG_X < 146
KBD(VK_RIGHT,1)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,145,150)
WEND
KBD(VK_RIGHT,2)
ENDIF
FOR X = 270 TO 600 STEP 10
BTN(LEFT,0,X,50) // 1024×768で使用する場合は50→240に変更
NEXT
KBD(VK_DOWN,0,1000)
KBD(VK_Y,0,500)
KBD(VK_Y,0,1000)


SLEEP(5)

WEND
