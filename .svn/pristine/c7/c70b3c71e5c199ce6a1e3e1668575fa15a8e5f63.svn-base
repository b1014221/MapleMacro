THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

G = 3
N = 3

WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/十字旅団中級体力水薬9.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/十字旅団中級魔力水薬0.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//滞在マップ確認・この画像を発見したら異常が起きたと判断してログアウト
IF CHKIMG("../画像/ルディブリアム.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS

//モンスターブックの新しいタブが開放された時のメッセージを自動で閉じる
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

IFB G > 2
KBD(VK_G,0,100)
SLEEP(1.5)
G = 0
ENDIF

IFB N > 2
KBD(VK_NEXT,0,100)
SLEEP(0.5)
N = 0
ENDIF

KBD(VK_LEFT,1)
KBD(VK_CTRL,0,200)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,78,150)
KBD(VK_CTRL,0,2000)
IF CHKIMG("../画像/ルディブリアム.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND
KBD(VK_LEFT,2)

FOR X = 1 TO 10
KBD(VK_CTRL,0,100)
NEXT

KBD(VK_RIGHT,1)
KBD(VK_UP,1)
KBD(VK_CTRL,0,500)
WHILE TRUE
IF CHKIMG("../画像/黄点.BMP",0,0,0,100,105) THEN BREAK // ハシゴを登りきったらBREAK
IF !CHKIMG("../画像/黄点.BMP",0,0,0,100,150) THEN BREAK // ハシゴに登り損ねて右に行ったらBREAK
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND
KBD(VK_RIGHT,2)
FOR X = 1 TO 12
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_UP,2)

IF CHKIMG("../画像/ルディブリアム.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

KBD(VK_LEFT,1,1000)
KBD(VK_C,0,200)
KBD(VK_LEFT,2,1000)

FOR X = 1 TO 10
KBD(VK_CTRL,0,100)
NEXT

KBD(VK_RIGHT,1,1000)
KBD(VK_CTRL,0,500)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,160,150)
KBD(VK_CTRL,0,2000)
IF CHKIMG("../画像/ルディブリアム.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND
KBD(VK_RIGHT,2)
FOR X = 1 TO 10
KBD(VK_CTRL,0,100)
NEXT

SLEEP(0.8)

G = G + 1
N = N + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND
//▲▲自動狩りメイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼自動狩りメイン部分と並列して繰り返し行う処理ココから▼▼



//▲▲ココまで▲▲
WEND
FEND