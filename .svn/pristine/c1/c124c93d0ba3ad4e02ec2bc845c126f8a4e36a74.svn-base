//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

WHILE TRUE
	KBD(VK_NEXT,CLICK,1000)
	SLEEP(1)

	FOR Y = 1 TO 3
		KBD(VK_LEFT,DOWN)
		FOR X = 1 TO 18
		KBD(VK_CTRL,CLICK,1300)
		NEXT
		KBD(VK_LEFT,UP)
	
		KBD(VK_RIGHT,DOWN)
		FOR X = 1 TO 18
		KBD(VK_CTRL,CLICK,1300)
		NEXT
		KBD(VK_RIGHT,UP)

		//▼▼ペットのエサの設定２▼▼
		IFB GETTIME() > PET
		KBD(VK_T,0,100)
		SLEEP(0.1)
		PET = GETTIME( 900 / 86400 )
		ENDIF
		//▲▲ココまで▲▲
	NEXT
WEND



