THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

G=0
V=0

WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/十字旅団中級体力水薬9.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/十字旅団中級魔力水薬0.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//滞在マップ確認・この画像を発見したら異常が起きたと判断してログアウト
IF CHKIMG("../画像/マガティア.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS

//モンスターブックの新しいタブが開放された時のメッセージを自動で閉じる
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

IFB GETTIME() > G
FOR X = 1 TO 5
KBD(VK_G,0,100) // ヘイスト
NEXT
SLEEP(0.3) //Gにミラーも含める場合は、0.3→2.5に変更
G = GETTIME( 190 / 86400 )
ENDIF

//▼▼ミラーが不要な場合はこのブロックを削除▼▼
IFB GETTIME() > V
FOR X = 1 TO 5
KBD(VK_V,0,100) // ミラー
NEXT
SLEEP(1)
V = GETTIME( 90 / 86400 ) // 90は、ミラーの持続秒数マイナス10秒くらいの数値
ENDIF
//▲▲ココまで▲▲

KBD(VK_RIGHT,1,100)
FOR Y = 1 TO 2
	FOR X = 1 TO 8
	KBD(VK_END,0,50)
	KBD(VK_C,0,50)
	NEXT
	FOR X = 1 TO 5
	KBD(VK_SHIFT,0,100)
	NEXT
	SLEEP(0.2)
NEXT
KBD(VK_RIGHT,2)

IF CHKIMG("../画像/マガティア.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

KBD(VK_LEFT,1,100)
FOR Y = 1 TO 2
	FOR X = 1 TO 8
	KBD(VK_END,0,50)
	KBD(VK_C,0,50)
	NEXT
	FOR X = 1 TO 5
	KBD(VK_SHIFT,0,100)
	NEXT
	SLEEP(0.2)
NEXT
KBD(VK_LEFT,2)

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND
//▲▲自動狩りメイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼自動狩りメイン部分と並列して繰り返し行う処理ココから▼▼



//▲▲ココまで▲▲
WEND
FEND