MOUSEORG(GETID("MapleStory","MapleStoryClass"),2)

SLEEP(2)

While true

//　3秒×300回で15分を測っています
//　2500=2.5秒、500=0.5秒です
//　変更したい場合は自由に変更してください

	For　x　=　1　to　300
	KBD(VK_DOWN,CLICK,500)　
	KBD(VK_RETURN,CLICK,2500)
	Next

KBD(VK_RETURN,CLICK,1000)　

//　ペットのエサは「SHIFT」に設定してあります
//　変更したい場合は、説明書を参考にしてください

KBD(VK_SHIFT,CLICK,2000)　//　ペットのエサのショートカットキー
	
KBD(VK_RETURN,CLICK,1000)　

Wend