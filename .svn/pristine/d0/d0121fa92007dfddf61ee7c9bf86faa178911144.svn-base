THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

G = 2

WHILE TRUE

IFB G > 1
KBD(VK_G,0,800)
SLEEP(1)
G = 0
ENDIF

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/白い薬9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/マナエリ0.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//滞在マップ確認・この画像を発見したら異常が起きたと判断してログアウト
IF CHKIMG("../画像/エーデルシュタイン.BMP",0,0,0,250,250) THEN CALL ../共通/ログアウト.UWS

//モンスターブックの新しいタブが開放された時のメッセージを自動で閉じる
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

KBD(VK_LEFT,1)
KBD(VK_CTRL,0,100)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,45,150)
KBD(VK_CTRL,0,1300)
IF CHKIMG("../画像/エーデルシュタイン.BMP",0,0,0,250,250) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND
KBD(VK_LEFT,2)
FOR X = 1 TO 10
KBD(VK_CTRL,0,100)
NEXT

KBD(VK_RIGHT,1,800)
KBD(VK_UP,1)
KBD(VK_CTRL,0,100)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,60,150)
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND
KBD(VK_CTRL,0)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,145,150)
KBD(VK_CTRL,0,1300)
IF CHKIMG("../画像/エーデルシュタイン.BMP",0,0,0,250,250) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND
KBD(VK_RIGHT,2)
KBD(VK_UP,2)
FOR X = 1 TO 10
KBD(VK_CTRL,0,100)
NEXT

G = G + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND
//▲▲自動狩りメイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼自動狩りメイン部分と並列して繰り返し行う処理ココから▼▼



//▲▲ココまで▲▲
WEND
FEND