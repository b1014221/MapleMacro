THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

G = 2

WHILE TRUE

IFB G > 1
KBD(VK_LEFT,1)
KBD(VK_LEFT,2,100)
FOR X = 1 TO 3
KBD(VK_CTRL,0,100)
NEXT
SLEEP(0.5)
FOR X = 1 TO 5
KBD(VK_G,0,100)
NEXT
SLEEP(3)
FOR X = 1 TO 5
KBD(VK_V,0,100)
NEXT
SLEEP(0.5)
G = 0
ENDIF

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/チューチューアイス9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/かき氷0.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//滞在マップ確認・この画像を発見したら異常が起きたと判断してログアウト
IF CHKIMG("../画像/ショーワ.BMP",0,0,0,250,150) THEN CALL ../共通/ログアウト.UWS

KBD(VK_LEFT,1)	
	WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,40,250)
		FOR X = 1 TO 3
		KBD(VK_HOME,0,100)
		NEXT
		FOR X = 1 TO 3
		KBD(VK_CTRL,0,100)
		NEXT
		SLEEP(0.2)
		IF CHKIMG("../画像/ショーワ.BMP",0,0,0,250,150) THEN CALL ../共通/ログアウト.UWS
	WEND
	FOR X = 1 TO 3
	KBD(VK_HOME,0,100)
	NEXT
	FOR X = 1 TO 3
	KBD(VK_CTRL,0,100)
	NEXT
	SLEEP(0.2)
KBD(VK_LEFT,2)
	FOR X = 1 TO 3
	KBD(VK_CTRL,0,100)
	NEXT
	SLEEP(0.2)
	
//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/チューチューアイス9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/かき氷0.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

KBD(VK_RIGHT,1)	
	WHILE CHKIMG("../画像/黄点.BMP",0,0,0,175,250)
		FOR X = 1 TO 3
		KBD(VK_HOME,0,100)
		NEXT
		FOR X = 1 TO 3
		KBD(VK_CTRL,0,100)
		NEXT
		SLEEP(0.2)
		IF CHKIMG("../画像/ショーワ.BMP",0,0,0,250,150) THEN CALL ../共通/ログアウト.UWS
	WEND
	FOR X = 1 TO 3
	KBD(VK_HOME,0,100)
	NEXT
	FOR X = 1 TO 3
	KBD(VK_CTRL,0,100)
	NEXT
	SLEEP(0.2)
KBD(VK_RIGHT,2)
	FOR X = 1 TO 3
	KBD(VK_CTRL,0,100)
	NEXT
	SLEEP(0.2)

G = G + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND
//▲▲自動狩りメイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼自動狩りメイン部分と並列して繰り返し行う処理ココから▼▼



//▲▲ココまで▲▲
WEND
FEND