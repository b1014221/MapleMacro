THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

G=10
V=10
U=10
N=10

WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/どろ〜りチーズ9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/かき氷0.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//滞在マップ確認・この画像を発見したら異常が起きたと判断してログアウト
IF CHKIMG("../画像/ショーワ.BMP",0,0,0,250,150) THEN CALL ../共通/ログアウト.UWS

//▼▼補助スキル▼▼
IFB G > 1 // 2往復ごとに↓
FOR X = 1 TO 5
KBD(VK_G,0,100) // ヘイスト・ブースター
NEXT
SLEEP(1.5)
G = 0
ENDIF

IFB V > 3 // 4往復ごとに↓
FOR X = 1 TO 5
KBD(VK_V,0,100) // ミラー
NEXT
SLEEP(2)
V = 0
ENDIF

IFB U > 1 // 2往復ごとに↓
FOR X = 1 TO 5
KBD(VK_U,0,100) // ソンズエフェクト
NEXT
SLEEP(1)
U = 0
ENDIF

IFB N > 5 // 6往復ごとに↓
FOR X = 1 TO 5
KBD(VK_NEXT,0,100) // メイプルヒーロー
NEXT
SLEEP(2)
N = 0
ENDIF

KBD(VK_RIGHT,1)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,195,150)
FOR X = 1 TO 8
KBD(VK_END,0,50)
KBD(VK_C,0,50)
NEXT
FOR X = 1 TO 5
KBD(VK_SHIFT,0,100)
NEXT
SLEEP(0.2)
IF CHKIMG("../画像/ショーワ.BMP",0,0,0,250,150) THEN CALL ../共通/ログアウト.UWS
WEND
KBD(VK_RIGHT,2,500)
KBD(VK_LEFT,1,100)
KBD(VK_LEFT,2,100)
//アッパーで殲滅
FOR X = 1 TO 20 // アッパーの回数は20の数値を増減
KBD(VK_CTRL,0,100)
NEXT

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/どろ〜りチーズ9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/かき氷0.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

KBD(VK_LEFT,1)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,20,150)
FOR X = 1 TO 8
KBD(VK_END,0,50)
KBD(VK_C,0,50)
NEXT
FOR X = 1 TO 5
KBD(VK_SHIFT,0,100)
NEXT
SLEEP(0.2)
IF CHKIMG("../画像/ショーワ.BMP",0,0,0,250,150) THEN CALL ../共通/ログアウト.UWS
WEND
KBD(VK_LEFT,2,500)
KBD(VK_RIGHT,1,100)
KBD(VK_RIGHT,2,100)
//アッパーで殲滅
FOR X = 1 TO 20 // アッパーの回数は20の数値を増減
KBD(VK_CTRL,0,100)
NEXT

G = G + 1
V = V + 1
U = U + 1
N = N + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND
//▲▲自動狩りメイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼自動狩りメイン部分と並列して繰り返し行う処理ココから▼▼

IF CHKIMG("../画像/HP80%.BMP",0,0,0,450,620) THEN KBD(VK_PRIOR,0)
SLEEP(0.1)

//▲▲ココまで▲▲
WEND
FEND




