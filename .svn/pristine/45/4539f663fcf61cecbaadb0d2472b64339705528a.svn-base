THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

WHILE TRUE

//▼▼ミニダンジョンに入る処理▼▼
WHILE TRUE
IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN BREAK
WEND
KBD(VK_UP,1,1000)
KBD(VK_UP,2,100)
WHILE TRUE
IF !CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN BREAK
WEND

KBD(VK_RIGHT,1,5000)
KBD(VK_RIGHT,2,1000)

//▼▼6600秒後の時間を記憶▼▼
MD = GETTIME( 6600 / 86400 )

MH = 3
J = 3
Z = 0

WHILE TRUE



//▼▼補助スキル▼▼
SLEEP(0.5)

IFB J > 2
	Z = Z + 1
	IFB Z MOD 2 < 1 // Z割る2の余りが0だったら
	KBD(VK_LEFT,1)
	KBD(VK_LEFT,2,200)
	ENDIF
	KBD(VK_J,0,100)
	SLEEP(1)
	J = 0
ENDIF

IFB MH > 2
KBD(VK_NEXT,0,100)
SLEEP(1.5)
MH = 0
ENDIF

KBD(VK_V,0,100)
KBD(VK_G,0,500)
SLEEP(2)

//▼▼下段へ移動▼▼
KBD(VK_DOWN,1)
FOR X = 1 TO 10
KBD(VK_C,0,100)
NEXT
KBD(VK_DOWN,2)

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼下段殲滅▼▼
FOR X = 1 TO 10
KBD(VK_CTRL,0,100)
NEXT

KBD(VK_LEFT,1,500)
FOR X = 1 TO 25
KBD(VK_HOME,0,100)
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_LEFT,2)
KBD(VK_RIGHT,1)
FOR X = 1 TO 25
KBD(VK_HOME,0,100)
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_RIGHT,2)
KBD(VK_LEFT,1)
FOR X = 1 TO 25
KBD(VK_HOME,0,100)
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_LEFT,2,2000)

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼下から2段目左へ移動▼▼
KBD(VK_RIGHT,1)
KBD(VK_UP,1)
KBD(VK_RIGHT,2,1000)
KBD(VK_HOME,0,2000)
KBD(VK_UP,2,500)

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼下から2段目左殲滅▼▼
FOR X = 1 TO 20
KBD(VK_CTRL,0,100)
NEXT

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼下から2段目右へ移動▼▼
KBD(VK_RIGHT,1,800)
FOR X = 1 TO 15
KBD(VK_HOME,0,100)
NEXT
KBD(VK_RIGHT,2)

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼下から2段目右殲滅▼▼
FOR X = 1 TO 15
KBD(VK_CTRL,0,100)
NEXT

KBD(VK_LEFT,1,800)
KBD(VK_LEFT,2,100)

FOR X = 1 TO 15
KBD(VK_CTRL,0,100)
NEXT

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼上から2段目へ移動▼▼
KBD(VK_RIGHT,1)
KBD(VK_UP,1)
KBD(VK_RIGHT,2,3000)
SLEEP(3)
FOR X = 1 TO 5
KBD(VK_HOME,0,100)
NEXT
KBD(VK_UP,2,200)

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼上から2段目殲滅▼▼
FOR Y = 1 TO 2
	KBD(VK_LEFT,1,500)
	FOR X = 1 TO 15
	KBD(VK_HOME,0,100)
	KBD(VK_CTRL,0,100)
	NEXT
	KBD(VK_LEFT,2)

	KBD(VK_RIGHT,1)
	FOR X = 1 TO 15
	KBD(VK_HOME,0,100)
	KBD(VK_CTRL,0,100)
	NEXT
	KBD(VK_RIGHT,2)
NEXT

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼上段へ移動▼▼
KBD(VK_LEFT,1,500)
KBD(VK_UP,1)
KBD(VK_LEFT,2,2000)
KBD(VK_UP,2,2000)

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼上段殲滅▼▼
KBD(VK_LEFT,1)
KBD(VK_C,0,100)
FOR X = 1 TO 12
KBD(VK_HOME,0,100)
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_LEFT,2)

KBD(VK_RIGHT,1)
FOR X = 1 TO 12
KBD(VK_HOME,0,100)
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_RIGHT,2)

KBD(VK_LEFT,1)
FOR X = 1 TO 12
KBD(VK_HOME,0,100)
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_LEFT,2)

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

//▼▼安置へ移動▼▼
KBD(VK_RIGHT,1)
FOR X = 1 TO 70
KBD(VK_HOME,0,100)
NEXT
KBD(VK_RIGHT,2)

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS

MH = MH + 1
J = J + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

//▼▼最初に記憶した時間を過ぎていたら、BREAKで↓へ飛ぶ▼▼
IF GETTIME() > MD THEN BREAK

WEND

//▼▼ミニダンジョンの外へ出る処理▼▼
FOR Y = 1 TO 1

KBD(VK_LEFT,1,500)
KBD(VK_LEFT,2,400)
FOR X = 1 TO 3
KBD(VK_UP,1,100)
KBD(VK_UP,2,50)
SLEEP(5)
IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN BREAK 2
KBD(VK_LEFT,1,100)
KBD(VK_LEFT,2,50)
NEXT

WHILE TRUE
KBD(VK_RIGHT,1)
FOR X = 1 TO 50
KBD(VK_HOME,0,100)
NEXT
KBD(VK_RIGHT,2)
KBD(VK_U,0,500)
KBD(VK_DOWN,1,100)
FOR X = 1 TO 20
KBD(VK_C,0,100)
NEXT
KBD(VK_DOWN,2)
KBD(VK_LEFT,1,100)
KBD(VK_UP,1)
KBD(VK_C,0,200) //←ロープにジャンプするタイミングがズレる場合は200の数値を100〜300程度で調整して試してください
KBD(VK_LEFT,2,1000)
KBD(VK_UP,2,3000)
KBD(VK_C,0,100)
KBD(VK_UP,1,1000)
KBD(VK_UP,2,50)
SLEEP(5)
IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN BREAK 2
WEND

NEXT

WEND
//▲▲自動狩りメイン部分ココまで▲▲


