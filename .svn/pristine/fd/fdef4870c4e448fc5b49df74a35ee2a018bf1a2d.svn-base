THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/十字旅団中級体力水薬9.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/十字旅団中級魔力水薬0.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//滞在マップ確認・この画像を発見したら異常が起きたと判断してログアウト
IF CHKIMG("../画像/ルディブリアム.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS

//モンスターブックの新しいタブが開放された時のメッセージを自動で閉じる
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

KBD(VK_G,0,1000)
SLEEP(0.5)

FOR G = 1 TO 2

KBD(VK_LEFT,1)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,70,200)
FOR X = 1 TO 5
KBD(VK_HOME,0,100)
NEXT
FOR X = 1 TO 5
KBD(VK_CTRL,0,100)
NEXT
IF CHKIMG("../画像/ルディブリアム.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND
KBD(VK_LEFT,2)

KBD(VK_RIGHT,1,500)
FOR X = 1 TO 5
KBD(VK_HOME,0,100)
NEXT
FOR X = 1 TO 5
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_UP,1)

IF CHKIMG("../画像/ルディブリアム.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

WHILE TRUE
IF CHKIMG("../画像/黄点.BMP",0,0,0,100,108) THEN BREAK
IF !CHKIMG("../画像/黄点.BMP",0,0,0,100,200) THEN BREAK
WEND
FOR X = 1 TO 12
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_RIGHT,2)

KBD(VK_LEFT,1,500)
FOR X = 1 TO 2
KBD(VK_HOME,0,100)
NEXT
KBD(VK_LEFT,2,200)
FOR X = 1 TO 12
KBD(VK_CTRL,0,100)
NEXT

KBD(VK_UP,2)

KBD(VK_RIGHT,1,500)
SLEEP(0.5)
FOR X = 1 TO 5
KBD(VK_CTRL,0,100)
NEXT

WHILE CHKIMG("../画像/黄点.BMP",0,0,0,115,130)
FOR X = 1 TO 5
KBD(VK_HOME,0,100)
NEXT
FOR X = 1 TO 5
KBD(VK_CTRL,0,100)
NEXT
IF CHKIMG("../画像/ルディブリアム.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)
WEND

WHILE CHKIMG("../画像/黄点.BMP",0,0,0,165,200)
FOR X = 1 TO 5
KBD(VK_HOME,0,100)
NEXT
WEND

KBD(VK_RIGHT,2)

IFB CHKIMG("../画像/黄点.BMP",0,0,0,200,115)
KBD(VK_DOWN,1,200)
KBD(VK_C,0,200)
KBD(VK_DOWN,2,300)
SLEEP(0.2)
ENDIF

FOR X = 1 TO 5
KBD(VK_CTRL,0,100)
NEXT

KBD(VK_LEFT,1,500)
KBD(VK_LEFT,2,100)
FOR X = 1 TO 5
KBD(VK_CTRL,0,100)
NEXT

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

NEXT

WEND
//▲▲自動狩りメイン部分ココまで▲▲


