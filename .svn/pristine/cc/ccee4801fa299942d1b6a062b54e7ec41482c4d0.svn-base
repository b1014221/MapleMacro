THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

G = 10

WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/チューチューアイス9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/かき氷0.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//滞在マップ確認・この画像を発見したら異常が起きたと判断してログアウト
IF CHKIMG("../画像/ショーワ.BMP",0,0,0,250,150) THEN CALL ../共通/ログアウト.UWS

IFB CHKIMG("../画像/MP20%.BMP",0,0,0,600,620)
KBD(VK_CTRL,2)	
KBD(VK_DELETE,0,500)
ENDIF
IFB CHKIMG("../画像/HP50%.BMP",0,0,0,450,620)
KBD(VK_CTRL,2)	
KBD(VK_PRIOR,0,500)
ENDIF	

//▼▼補助スキル▼▼
IFB G > 1
KBD(VK_G,0,500)
SLEEP(2)
G = 0
ENDIF
KBD(VK_V,0,500)
SLEEP(0.5)

KBD(VK_CTRL,1)
KBD(VK_LEFT,1)
KBD(VK_LEFT,2,100)
FOR X = 1 TO 10
KBD(VK_CTRL,1,100)
NEXT

IFB CHKIMG("../画像/MP20%.BMP",0,0,0,600,620)
KBD(VK_CTRL,2)	
KBD(VK_DELETE,0,500)
ENDIF
IFB CHKIMG("../画像/HP50%.BMP",0,0,0,450,620)
KBD(VK_CTRL,2)	
KBD(VK_PRIOR,0,500)
ENDIF	

WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,40,200)
FOR X = 1 TO 2　// ←止まってバルカンを撃つ時間の調整はココ、2を増減
KBD(VK_CTRL,1,100)
NEXT
KBD(VK_LEFT,1)
KBD(VK_LEFT,2,200)　// ←１回ごとに左に進む距離の調整はココ、200を増減
SLEEP(0.1)

IFB CHKIMG("../画像/MP20%.BMP",0,0,0,600,620)
KBD(VK_CTRL,2)	
KBD(VK_DELETE,0,500)
ENDIF
IFB CHKIMG("../画像/HP50%.BMP",0,0,0,450,620)
KBD(VK_CTRL,2)	
KBD(VK_PRIOR,0,500)
ENDIF	

IF CHKIMG("../画像/ショーワ.BMP",0,0,0,250,150) THEN CALL ../共通/ログアウト.UWS

WEND

FOR X = 1 TO 4
KBD(VK_CTRL,1,200)
NEXT

KBD(VK_RIGHT,1)
KBD(VK_RIGHT,2,100)

IFB CHKIMG("../画像/MP20%.BMP",0,0,0,600,620)
KBD(VK_CTRL,2)	
KBD(VK_DELETE,0,500)
ENDIF
IFB CHKIMG("../画像/HP50%.BMP",0,0,0,450,620)
KBD(VK_CTRL,2)	
KBD(VK_PRIOR,0,500)
ENDIF	

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/チューチューアイス9.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/かき氷0.BMP",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

WHILE CHKIMG("../画像/黄点.BMP",0,0,0,175,200)
FOR X = 1 TO 2　// ←止まってバルカンを撃つ時間の調整はココ、2を増減
KBD(VK_CTRL,1,100)
NEXT
KBD(VK_RIGHT,1)
KBD(VK_RIGHT,2,200)　// ←１回ごとに右に進む距離の調整はココ、200を増減
SLEEP(0.1)

IFB CHKIMG("../画像/MP20%.BMP",0,0,0,600,620)
KBD(VK_CTRL,2)	
KBD(VK_DELETE,0,500)
ENDIF
IFB CHKIMG("../画像/HP50%.BMP",0,0,0,450,620)
KBD(VK_CTRL,2)	
KBD(VK_PRIOR,0,500)
ENDIF	

IF CHKIMG("../画像/ショーワ.BMP",0,0,0,250,150) THEN CALL ../共通/ログアウト.UWS

WEND

FOR X = 1 TO 4
KBD(VK_CTRL,1,200)
NEXT

IFB CHKIMG("../画像/MP20%.BMP",0,0,0,600,620)
KBD(VK_CTRL,2)	
KBD(VK_DELETE,0,500)
ENDIF
IFB CHKIMG("../画像/HP50%.BMP",0,0,0,450,620)
KBD(VK_CTRL,2)	
KBD(VK_PRIOR,0,500)
ENDIF	

KBD(VK_CTRL,2)

G = G + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND
//▲▲自動狩りメイン部分ココまで▲▲


