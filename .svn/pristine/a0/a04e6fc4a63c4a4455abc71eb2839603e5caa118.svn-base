THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

WHILE TRUE

//▼▼まず、正しいマップにいるか確認▼▼
WHILE TRUE
IF CHKIMG("../画像/マガティア周辺.BMP",0,0,0,100,100) THEN BREAK
WEND

//▼▼入り口近くへジャンプ▼▼
KBD(VK_RIGHT,1,1000)
KBD(VK_C,0,100)
KBD(VK_RIGHT,2,100)

//▼▼中に入る処理▼▼
FOR X = 1 TO 5
KBD(VK_RIGHT,1,100)
KBD(VK_RIGHT,2,100)
KBD(VK_UP,1,100)
KBD(VK_UP,2,100)
SLEEP(3)
IF !CHKIMG("../画像/マガティア周辺.BMP",0,0,0,100,100) THEN BREAK
NEXT

//▼▼6600秒後の時間を記憶▼▼
MD = GETTIME( 6600 / 86400 )

G = 5

WHILE TRUE

IF CHKIMG("../画像/マガティア周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/十字旅団中級体力水薬9.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/十字旅団中級魔力水薬0.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

//▼▼補助スキル▼▼
IFB G > 4
KBD(VK_G,0,1000)
SLEEP(0.5)
G = 0
ENDIF

KBD(VK_HOME,0)

//▼▼左端へ移動▼▼
FOR Y = 1 TO 3
FOR X = 1 TO 3
KBD(VK_LEFT,0,100)
NEXT
FOR X = 1 TO 3
KBD(VK_C,0,100)
NEXT
SLEEP(0.2)
NEXT

IF CHKIMG("../画像/マガティア周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

//▼▼ドリルで右端まで移動▼▼
KBD(VK_RIGHT,1,100)
FOR X = 1 TO 45
KBD(VK_CTRL,0,100)
NEXT
KBD(VK_RIGHT,2)

//▼▼集めた敵を殲滅▼▼
FOR X = 1 TO 20
KBD(VK_END,0,100)
NEXT
SLEEP(0.5)

IF CHKIMG("../画像/マガティア周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

//▼▼ちょっと左へ移動▼▼
FOR X = 1 TO 3
KBD(VK_LEFT,0,100)
NEXT
KBD(VK_LEFT,1,500)
KBD(VK_LEFT,2,600)

//▼▼ロケットブースターで右上へ移動▼▼
FOR X = 1 TO 5
KBD(VK_SHIFT,0,100)
NEXT
SLEEP(1.5)

//▼▼ドリルで集めて殲滅▼▼
FOR X = 1 TO 5
KBD(VK_CTRL,0,100)
NEXT
FOR X = 1 TO 30
KBD(VK_END,0,100)
NEXT

IF CHKIMG("../画像/マガティア周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/タブ確認.BMP",0,0,0,550,400) THEN KBD(VK_ESC,0)

//▼▼ちょっと左へ移動▼▼
KBD(VK_LEFT,1,500)
KBD(VK_LEFT,2,800)
FOR X = 1 TO 3
KBD(VK_LEFT,0,100)
NEXT
KBD(VK_LEFT,1,500)
KBD(VK_LEFT,2,400)

//▼▼ドリルで集めて殲滅▼▼
FOR X = 1 TO 5
KBD(VK_CTRL,0,100)
NEXT
FOR X = 1 TO 30
KBD(VK_END,0,100)
NEXT
SLEEP(0.5)

G = G + 1

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

//▼▼最初に記憶した時間を過ぎていたら、BREAKでWENDの下へ飛ぶ▼▼
IF GETTIME() > MD THEN BREAK

WEND

//▼▼安置へ移動▼▼
FOR Y = 1 TO 5
FOR X = 1 TO 3
KBD(VK_LEFT,0,100)
NEXT
FOR X = 1 TO 3
KBD(VK_C,0,100)
NEXT
SLEEP(0.2)
NEXT
KBD(VK_RIGHT,1,500)
KBD(VK_RIGHT,2,2500)
FOR X = 1 TO 10
KBD(VK_SHIFT,0,100)
NEXT
SLEEP(5)

//▼▼チャンネル変更処理▼▼
WHILE TRUE
KBD(VK_ESC,0,1000)
KBD(VK_ENTER,0,1000)
KBD(VK_RIGHT,0,1000)
KBD(VK_ENTER,0,1000)
SLEEP(5)
IF CHKIMG("../画像/マガティア周辺.BMP",0,0,0,100,100) THEN BREAK
WEND

WEND
//▲▲自動狩りメイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼自動狩りメイン部分と並列して繰り返し行う処理ココから▼▼



//▲▲ココまで▲▲
WEND
FEND