KBD(VK_RIGHT,2)
KBD(VK_LEFT,2)

//▼▼左端までジャンプ連打で移動▼▼
KBD(VK_LEFT,1)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,40,210)
KBD(VK_C,0,100)
IF CHKIMG("../画像/エルナス.BMP",0,0,0,250,200) THEN CALL ../共通/ログアウト.UWS
WEND

//▼▼一番下まで移動▼▼
KBD(VK_DOWN,1,500)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,100,190)
