//▼▼上段に移動▼▼
KBD(VK_RIGHT,1)
KBD(VK_UP,1)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,65,160)
WEND
KBD(VK_UP,2)
KBD(VK_RIGHT,2)

IF !CHKIMG("../画像/黄点.BMP",0,0,0,110,135) THEN BREAK // 登れていなかった場合は★まで飛んで場所をリセット

//▼▼上段殲滅▼▼
FOR X = 1 TO 2 // ←2往復に設定してあります
	KBD(VK_RIGHT,1)
	WHILE CHKIMG("../画像/黄点.BMP",0,0,0,95,250)
