WEND
KBD(VK_LEFT,2)

KBD(VK_RIGHT,1)
KBD(VK_UP,1)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,50,210)
WEND
KBD(VK_UP,2)
KBD(VK_RIGHT,2)

IF !CHKIMG("../画像/黄点.BMP",0,0,0,110,210) THEN BREAK // 登れていなかった場合は★まで飛んで場所をリセット

