ACW(GETID("MapleStory","MapleStoryClass"),1,1)

CHKIMG("../画像/黄点.BMP",0,0,0,300,300)
E = G_IMG_X

HS = 0

WHILE TRUE

//▼▼自分とグル員の位置を確認▼▼
CHKIMG("../画像/黄点.BMP",0,0,0,300,300)
A = G_IMG_X
B = G_IMG_Y
CHKIMG("../画像/橙点.BMP",0,0,0,300,300)
C = G_IMG_X
D = G_IMG_Y

//▼▼グル員が指定範囲内にいた場合はスキル使用▼▼
IFB -18 < A-C and A-C < 18 and -12 < B-D and B-D < 12
KBD(VK_END,0)
HS = HS + 1
SLEEP(60) // ←スキル使用後、ココで指定した秒数は再度スキルを使用せずに待機
ENDIF

//▼▼スキルを10回使用したら少し左に移動▼▼
IFB HS = 10
KBD(VK_LEFT,1)
WHILE !CHKIMG("../画像/黄点.BMP",0,0,0,E,300)
WEND
KBD(VK_LEFT,2)
SLEEP(0.5)
HS = HS + 1
ENDIF

//▼▼スキルを20回使用したら少し右に移動▼▼
IFB HS = 20
KBD(VK_RIGHT,1)
WHILE CHKIMG("../画像/黄点.BMP",0,0,0,E,300)
WEND
KBD(VK_RIGHT,2)
SLEEP(0.5)
HS = 0 //スキル使用回数のカウントを0にリセット
ENDIF

//▼▼MPが減っていたらMP薬を使用▼▼
IFB CHKIMG("../画像/MP20%.BMP",0,0,0,600,620)
KBD(VK_DELETE,0)
SLEEP(0.5)
ENDIF

WEND