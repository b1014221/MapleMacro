//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

WHILE TRUE

KBD(VK_RIGHT,1,500)
FOR X = 1 TO 22
KBD(VK_CTRL,0,200)
KBD(VK_CTRL,0,200)
KBD(VK_CTRL,0,200)
SLEEP(0.9)
NEXT
KBD(VK_RIGHT,2)

KBD(VK_LEFT,1,500)
FOR X = 1 TO 22
KBD(VK_CTRL,0,200)
KBD(VK_CTRL,0,200)
KBD(VK_CTRL,0,200)
SLEEP(0.9)
NEXT
KBD(VK_LEFT,2)

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND

