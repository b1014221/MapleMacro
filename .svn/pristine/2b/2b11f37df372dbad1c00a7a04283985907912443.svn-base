THREAD 並列処理() //一番↓で指定した処理を、メイン部分と並列で実行

//▼▼自動狩りメイン部分ココから▼▼
ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

WHILE TRUE

//▼▼ミニダンジョンに入る処理▼▼
WHILE TRUE
IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN BREAK
WEND
KBD(VK_UP,1,1000)
KBD(VK_C,0,500)
KBD(VK_C,0,500)
KBD(VK_UP,2,100)
KBD(VK_UP,1,1000)
KBD(VK_UP,2,100)
WHILE TRUE
IF !CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN BREAK
WEND

//▼▼6600秒後の時間を記憶▼▼
MD = GETTIME( 6600 / 86400 )

//▼▼とりあえず左下へ移動▼▼
KBD(VK_LEFT,1,5000)
KBD(VK_C,0,1000)
FOR X = 1 TO 10
KBD(VK_C,0,100)
NEXT
KBD(VK_LEFT,2,2500)
IF CHKIMG("../画像/HP50%.BMP") THEN KBD(VK_PRIOR,0)

//▼▼右端へ移動▼▼
KBD(VK_RIGHT,1)
FOR X = 1 TO 50
KBD(VK_END,0,100)
IF CHKIMG("../画像/HP50%.BMP") THEN KBD(VK_PRIOR,0)
NEXT
KBD(VK_RIGHT,2,1000)
IF CHKIMG("../画像/HP50%.BMP") THEN KBD(VK_PRIOR,0)
KBD(VK_LEFT,1,100)
KBD(VK_LEFT,2,250)

WHILE TRUE

KBD(VK_G,0)
SLEEP(2)
G = GETTIME( 95 / 86400 )

WHILE TRUE

//薬の残量を確認、HP薬が9個以下、MP薬が0個だった場合はログアウト
IF CHKIMG("../画像/十字旅団最上級体力水薬9.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/十字旅団最上級魔力水薬0.bmp",0,0,0,800,580) THEN CALL ../共通/ログアウト.UWS

FOR X = 1 TO 10
KBD(VK_CTRL,1,100)
NEXT

IF GETTIME() > G THEN BREAK

IFB !CHKIMG("../画像/卵ダンジョン2.BMP",0,0,0,805,580)
KBD(VK_LEFT,1,500)
KBD(VK_LEFT,2,100)
ENDIF
IF CHKIMG("../画像/HP50%.BMP") THEN KBD(VK_PRIOR,0)

IFB CHKIMG("../画像/卵ダンジョン1.BMP",0,0,0,800,580)
KBD(VK_CTRL,2)
KBD(VK_RIGHT,1)
FOR X = 1 TO 30
KBD(VK_END,0,100)
NEXT
IF CHKIMG("../画像/HP50%.BMP") THEN KBD(VK_PRIOR,0)
KBD(VK_RIGHT,2,1000)
IF CHKIMG("../画像/HP50%.BMP") THEN KBD(VK_PRIOR,0)
KBD(VK_LEFT,1,100)
KBD(VK_LEFT,2,250)
ENDIF

IFB CHKIMG("../画像/MP20%.BMP",0,0,0,600,620)
KBD(VK_CTRL,2)	
KBD(VK_DELETE,0,500)
ENDIF
IFB CHKIMG("../画像/HP50%.BMP",0,0,0,450,620)
KBD(VK_CTRL,2)	
KBD(VK_PRIOR,0,500)
ENDIF

//滞在マップ確認、この画像を発見したら、街に飛ばされたと判断してログアウトする
IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN CALL ../共通/ログアウト.UWS
WEND

KBD(VK_CTRL,2)

//▼▼最初に記憶した時間を過ぎていたら、BREAKで↓へ飛ぶ▼▼
IF GETTIME() > MD THEN BREAK

KBD(VK_SHIFT,0,200)
SLEEP(0.5)

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

WEND

//▼▼チャンネル変更▼▼
KBD(VK_LEFT,1)
FOR X = 1 TO 40
KBD(VK_END,0,100)
NEXT
KBD(VK_LEFT,2,1500)
KBD(VK_NEXT,0,100)
SLEEP(1)
FOR X = 1 TO 10
KBD(VK_U,0,100)
NEXT
KBD(VK_RIGHT,1,500)
KBD(VK_UP,1)
KBD(VK_C,0,500)
KBD(VK_RIGHT,2,1000)
KBD(VK_UP,2,2000)
KBD(VK_NEXT,0,1000)
SLEEP(1)
IF CHKIMG("../画像/HP50%.BMP") THEN KBD(VK_PRIOR,0)

WHILE TRUE
KBD(VK_ESC,0,500)
KBD(VK_ENTER,0,500)
KBD(VK_RIGHT,0,500)
KBD(VK_ENTER,0,500)
SLEEP(3)
IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,100,100) THEN BREAK
WEND

WEND
//▲▲自動狩りメイン部分ココまで▲▲


PROCEDURE 並列処理()
WHILE TRUE
//▼▼自動狩りメイン部分と並列して繰り返し行う処理ココから▼▼



//▲▲ココまで▲▲
WEND
FEND


