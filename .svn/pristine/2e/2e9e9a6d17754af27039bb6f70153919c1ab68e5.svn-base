ACW(GETID("MapleStory","MapleStoryClass"),1,1)

//▼▼ペットのエサの設定１▼▼
PET = GETTIME( 900 / 86400 )
//▲▲ココまで▲▲

//▼▼6900秒後の時間を記憶▼▼
MD = GETTIME( 6900 / 86400 )

//▼▼最初に補助スキル▼▼
KBD(VK_G,0,1000)
G = GETTIME( 190 / 86400 )
KBD(VK_HOME,0,1000)
KBD(VK_J,0,1000) // ←メイプルヒーロー
MH = GETTIME( 290 / 86400 ) // ←メイプルヒーローのかけ直し時間、290秒
SLEEP(2)

GATE = GETTIME()

//▼▼A地点へ移動▼▼
KBD(VK_LEFT,1,100)
KBD(VK_LEFT,2,4000) //左に移動する距離の調整は、4000の数値を3800〜4200程度で増減
KBD(VK_RIGHT,1,100)
KBD(VK_RIGHT,2,100)

WHILE TRUE
FOR Z = 1 TO 1// ↓の★と対

IF CHKIMG("../画像/リプレ周辺.BMP",0,0,0,200,200) THEN CALL ../共通/ログアウト.UWS
IF CHKIMG("../画像/十字旅団最上級魔力水薬0.bmp",0,0,0,800,580) THEN BREAK 2
IF CHKIMG("../画像/十字旅団最上級体力水薬9.bmp",0,0,0,800,580) THEN BREAK 2

IF CHKIMG("../画像/墓落ち.BMP",0,0,0,350,250) THEN CALL メカニック9C（設定ファイル・墓落ち時部分）.UWS

//▼▼ゲート設置▼▼
IFB GETTIME() > GATE
	FOR X = 1 TO 15　// ← レーザー
	KBD(VK_CTRL,0,100)
	NEXT
	KBD(VK_V,0,1200)

	KBD(VK_DOWN,1,800)
		FOR X = 1 TO 5
		KBD(VK_C,0,100)
		NEXT
	KBD(VK_DOWN,2,100)
	SLEEP(0.5)
	FOR X = 1 TO 15　// ← レーザー
	KBD(VK_CTRL,0,100)
	NEXT

	KBD(VK_DOWN,1,100)
		FOR X = 1 TO 100
		IF !CHKIMG("../画像/卵ダンジョン5.BMP",0,0,0,800,580) THEN BREAK
		KBD(VK_C,0,100)
		NEXT
	KBD(VK_DOWN,2,100)

	FOR X = 1 TO 15　// ← レーザー
	KBD(VK_CTRL,0,100)
	NEXT
	KBD(VK_V,0,1200)
	SLEEP(0.8)
	FOR X = 1 TO 15　// ← レーザー
	KBD(VK_CTRL,0,100)
	NEXT
	SLEEP(0.8)	
	GATE = GETTIME( 290 / 86400 )
	
	BREAK // ★までBREAKで飛ぶ
ENDIF

//▼▼上段でレーザーで攻撃▼▼
FOR X = 1 TO 15　// ← レーザー
KBD(VK_CTRL,0,100)
NEXT
SLEEP(0.8)

//▼▼補助スキル▼▼
	//▼▼ブースター▼▼
	IFB GETTIME() > G
		FOR X = 1 TO 3
		KBD(VK_G,0,200)
		NEXT
		SLEEP(0.5)
		G = GETTIME( 190 / 86400 )
	ENDIF
	//▼▼ダイス▼▼
	IFB CHKIMG("../画像/ラッキーダイス.BMP",0,0,0,800,580)
		FOR X = 1 TO 100
		IF !CHKIMG("../画像/ラッキーダイス.BMP",0,0,0,800,580) THEN BREAK
		KBD(VK_HOME,0,100)
		NEXT
		SLEEP(0.5)
	ENDIF
	//▼▼メイプルヒーロー▼▼
	IFB GETTIME() > MH
		FOR X = 1 TO 3
		KBD(VK_J,0,200)
		NEXT
		SLEEP(2)
		MH = GETTIME( 290 / 86400 ) // ←メイプルヒーローのかけ直し時間、290秒
	ENDIF

//▼▼中段へ降りてレーザー▼▼
KBD(VK_DOWN,1)
	FOR X = 1 TO 5
	KBD(VK_C,0,100)
	NEXT
KBD(VK_DOWN,2,100)
SLEEP(0.5)
FOR X = 1 TO 15　// ← レーザー
KBD(VK_CTRL,0,100)
NEXT
SLEEP(0.8)

//▼▼補助スキル▼▼
	//▼▼ブースター▼▼
	IFB GETTIME() > G
		FOR X = 1 TO 3
		KBD(VK_G,0,200)
		NEXT
		SLEEP(0.5)
		G = GETTIME( 190 / 86400 )
	ENDIF
	//▼▼ダイス▼▼
	IFB CHKIMG("../画像/ラッキーダイス.BMP",0,0,0,800,580)
		FOR X = 1 TO 100
		IF !CHKIMG("../画像/ラッキーダイス.BMP",0,0,0,800,580) THEN BREAK
		KBD(VK_HOME,0,100)
		NEXT
		SLEEP(0.5)
	ENDIF
	//▼▼メイプルヒーロー▼▼
	IFB GETTIME() > MH
		FOR X = 1 TO 3
		KBD(VK_J,0,200)
		NEXT
		SLEEP(2)
		MH = GETTIME( 290 / 86400 ) // ←メイプルヒーローのかけ直し時間、290秒
	ENDIF

//▼▼下段へ降りてレーザー▼▼
KBD(VK_DOWN,1)
	FOR X = 1 TO 100
	IF !CHKIMG("../画像/卵ダンジョン5.BMP",0,0,0,800,580) THEN BREAK
	KBD(VK_C,0,100)
	NEXT
KBD(VK_DOWN,2,100)
FOR X = 1 TO 15　// ← レーザー
KBD(VK_CTRL,0,100)
NEXT
SLEEP(0.8)

//▼▼補助スキル▼▼
	//▼▼ブースター▼▼
	IFB GETTIME() > G
		FOR X = 1 TO 3
		KBD(VK_G,0,200)
		NEXT
		SLEEP(0.5)
		G = GETTIME( 190 / 86400 )
	ENDIF
	//▼▼ダイス▼▼
	IFB CHKIMG("../画像/ラッキーダイス.BMP",0,0,0,800,580)
		FOR X = 1 TO 100
		IF !CHKIMG("../画像/ラッキーダイス.BMP",0,0,0,800,580) THEN BREAK
		KBD(VK_HOME,0,100)
		NEXT
		SLEEP(0.5)
	ENDIF
	//▼▼メイプルヒーロー▼▼
	IFB GETTIME() > MH
		FOR X = 1 TO 3
		KBD(VK_J,0,200)
		NEXT
		SLEEP(2)
		MH = GETTIME( 290 / 86400 ) // ←メイプルヒーローのかけ直し時間、290秒
	ENDIF

NEXT // ★

//▼▼下段でロボファクトリー▼▼
IFB CHKIMG("../画像/ロボファクトリー.BMP",0,0,0,800,580) AND !CHKIMG("../画像/卵ダンジョン5.BMP",0,0,0,800,580)
	FOR X = 1 TO 100
	IF !CHKIMG("../画像/ロボファクトリー.BMP",0,0,0,800,580) THEN BREAK
	KBD(VK_END,0,100)
	NEXT
ENDIF

//▼▼ゲートで上段へ移動▼▼
FOR Y = 1 TO 1
	FOR X = 1 TO 15
	KBD(VK_UP,1,100)
	SLEEP(0.1)
	IF CHKIMG("../画像/卵ダンジョン5.BMP",0,0,0,800,580) THEN BREAK 2
	NEXT
	KBD(VK_UP,2)
	
	//ゲートで移動出来なかった場合はロケットブースターで上段へ移動
	FOR X = 1 TO 15
	KBD(VK_SHIFT,0,100)
	NEXT
	SLEEP(2)
	FOR X = 1 TO 15
	KBD(VK_SHIFT,0,100)
	NEXT
	SLEEP(2)
	GATE = GETTIME(-1)
	BREAK
NEXT
KBD(VK_UP,2)

//▼▼ペットのエサの設定２▼▼
IFB GETTIME() > PET
KBD(VK_T,0,500)// ←Tを押す命令　必要なら変更してください
SLEEP(0.1)
PET = GETTIME( 900 / 86400 )
ENDIF
//▲▲ココまで▲▲

//▼▼最初に記憶した時間を過ぎていたら、BREAKで↓へ飛ぶ▼▼
IF GETTIME() > MD THEN BREAK

WEND

CALL メカニック9C（設定ファイル・薬補充部分）.UWS

