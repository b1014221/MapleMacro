function getSugarTime()

    while true
        //iniファイルの[SUGAR_TINE]セクションのIS_SUGARキーがONの場合のみ実行
        ifb chkimg(lib.picPathHelper("sugarTime"),0,0,0,1366,800)
            BTN(LEFT,CLICK,G_IMG_X,G_IMG_Y,1000)
            KBD(VK_ENTER,0,1000)
            KBD(VK_ENTER,0,2000)
        endif
        sleep(30);
    wend

    result = MAPLE_RESULT_OK;
fend

